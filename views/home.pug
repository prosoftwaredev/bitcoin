extends layout

block content
  .row
    .page-header
    h3 Sign in
  form.form-horizontal(method='POST' action='/login')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label.col-sm-3.control-label(for='email') Email OR UserName
      .col-sm-7
        input.form-control(type='email', name='email', id='email', placeholder='Email OR Username', autofocus, required)
    .form-group 
      label.col-sm-3.control-label(for='password') Password
      .col-sm-7
        input.form-control(type='password', name='password', id='password', placeholder='Password', required)
    .form-group
      .col-sm-offset-3.col-sm-7
        button.col-sm-3.btn.btn-primary(type='submit')
          i.fa.fa-sign-in
          | Login
        a.col-sm-3.btn.btn-primary(href='/signup')
          i.fa.fa-user
          | Sign Up
    .form-group
      .col-sm-offset-3.col-sm-7
        a.btn.btn-link(href='/forgot') Forgot your password?
        hr
